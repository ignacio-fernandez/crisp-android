<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.upr.crisp_android.SetProfile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Set Profile"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_action_bar_content_inset_with_nav" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consumer"
        android:id="@+id/consumer"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="42dp"
        android:layout_alignEnd="@+id/textView9"
        android:onClick="setConsumerProfile" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Producer"
        android:id="@+id/producer"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/consumer"
        android:layout_alignEnd="@+id/consumer"
        android:onClick="setProducerProfile" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prosumer"
        android:id="@+id/prosumer"
        android:layout_below="@+id/producer"
        android:layout_marginTop="50dp"
        android:layout_alignStart="@+id/producer"
        android:layout_alignEnd="@+id/producer"
        android:onClick="setProsumerProfile" />
</RelativeLayout>
